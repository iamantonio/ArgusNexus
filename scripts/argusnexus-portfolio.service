[Unit]
Description=ArgusNexus V4 Portfolio Trader - Combined Strategy
After=network.target
Documentation=http://localhost:8000

[Service]
Type=simple
User=your_user
WorkingDirectory=/path/to/ArgusNexus
ExecStart=/path/to/ArgusNexus/venv/bin/python3 scripts/live_portfolio_trader.py --capital 500 --interval 1d
Restart=always
RestartSec=60
StandardOutput=journal
StandardError=journal
SyslogIdentifier=argusnexus-portfolio

# Environment
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
